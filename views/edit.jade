block content
    h1= "Edit Data"
    form(name="edit", method="post")
        div.input
        each dat in data
            span.label Firstname
            input(type="text", name="firstname", value="#{dat.firstname}")
            div.input
            span.label Lastname
            input(type="text", name="lastname", value="#{dat.lastname}")
        div.actions
            input(type="submit", value="edit")